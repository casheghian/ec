<%- model_class = Search -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:keywords) %></th>
      <th><%= model_class.human_attribute_name(:cuisine) %></th>
      <th><%= model_class.human_attribute_name(:offer) %></th>
      <th><%= model_class.human_attribute_name(:availability) %></th>
      <th><%= model_class.human_attribute_name(:max_party) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @search.each do |search| %>
      <tr>
        <td><%= link_to search.id, search_path(search) %></td>
        <td><%= search.keywords %></td>
        <td><%= search.cuisine_input %></td> 
        <td><%= search.offer_input %></td>
        <td><%= search.availability_input %></td>
        <td><%= search.max_party_input %></td>
        <td><%=l search.created_at %></td>
        <td>
        
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      search_path(search),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


