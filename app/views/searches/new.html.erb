<h1>Advanced Search</h1>

<%= form_for @search do |f| %>
  <div class="field">
    <%= f.label :keywords %><br />
    <%= f.text_field :keywords %>
  </div>
  <div class="field">
    <%= f.label :cuisine_id %><br />
    <%= f.collection_select :cuisine_id, Restaurant.order(:name), :cuisine_list, :cuisine_list, include_blank: true %>
  </div>
  
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>