 <div class="row">
  <div class="span9" id="search">  
    <%= form_for Search.new do |f| %>
    <%= f.text_field :keywords %>
    </div>

    <div class="actions span3"><%= f.submit "Search", :class =>'btn btn-search btn-large' %></div>
  </div>
  <small>Filter Options</small>

<div class="row" id="advanced_search">
  <div class="span6">
  <small style="display:block;">Cuisine</small>
  <%= check_box_tag "search[cuisine_input][]", "German" %>
    <%= f.label "German" %></br>

  <%= check_box_tag "search[cuisine_input][]", "Italian" %>
      <%= f.label "Italian" %></br>

  <%= check_box_tag "search[cuisine_input][]", "Asian" %>
      <%= f.label "Asian" %></br>
</div>

  <div class="span6">
      <small style="display:block;">Offer</small>

  <%= check_box_tag "search[offer_input][]", "50" %>
      <%= f.label "50%" %></br>

  <%= check_box_tag "search[offer_input][]", "241" %>
      <%= f.label "2 For 1" %></br>

  </div>
</div>
<% end %>


