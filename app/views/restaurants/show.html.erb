<%- model_class = Restaurant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @restaurant.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @restaurant.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @restaurant.content %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sub_content) %>:</strong></dt>
  <dd><%= @restaurant.sub_content %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cuisine) %>:</strong></dt>
  <dd><%= @restaurant.cuisine_list %></dd>
  <dt><strong><%= model_class.human_attribute_name(:offer) %>:</strong></dt>
  <dd><%= @restaurant.offer_list %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tags) %>:</strong></dt>
  <dd><%= @restaurant.tag_list %></dd>
  <dt><strong><%= model_class.human_attribute_name(:opening_hours) %>:</strong></dt>
  <dd><%= @restaurant.opening_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:restrictions) %>:</strong></dt>
  <dd><%= @restaurant.restrictions %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @restaurant.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @restaurant.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @restaurant.longitude %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              restaurants_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restaurant_path(@restaurant), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurant_path(@restaurant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
