<div class ="listing row" id = "<%= restaurant.id %>">
    <div class="listing_image">
        <% restaurant.images.each do |image| %>
            <%= image_tag image.image_url(:thumb).to_s %>
        <% end %>
    </div>

    <div class="details">
        <div class="pull-right">
            <small><%=restaurant.address %></br>
            <%=restaurant.zip %>, <%=restaurant.city %></small>
        </div>

        <div class "pull-left">
            <h1 class="listing_title"><%= link_to restaurant.name, restaurant %></h1>
            <p><strong>Küche:</strong> <%= restaurant.cuisines.pluck(:name).to_sentence(:two_words_connector => ', ', :last_word_connector => ', ' ) %></p>
             <p><strong>Resevierung:</strong><%= restaurant.phone_number %></p>


        <% if restaurant.offer_list.include?('50')%>
            <span class="label label-success">50%</span>
        <% else %>
            <span class="label label-success">2 Für 1</span>
        <% end %>
         <% unless restaurant.max_party_list.include?('0') %>
            <span class="label label-party"><i class="icon-user"></i>x<%=restaurant.max_party_list %></span> 
         <% end %>

       <% unless restaurant.availability_list.include?("Freitag") %>    
            <span class="label label-important"><i class="icon-remove"></i>Fr</span>
        <% end %>
        <% unless restaurant.availability_list.include?("Samstag") %>    
            <span class="label label-important"><i class="icon-remove"></i>Sa</span>
        <% end %>
        <% unless restaurant.availability_list.include?("Dezember") %>    
            <span class="label label-important"><i class="icon-remove"></i>Dez</span>
        <% end %>
    </div>
         

<% if current_user %>    
<tr>
    <td><%= link_to 'Show', restaurant %></td>
    <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
    <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
    </div>  
        
</div>
