<!DOCTYPE html>
<html>
<head>
  <title>Elbcard</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag  "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <header id="access" role="navigation">
    	<div class="container">
        <div class="row" id="search_form_home">

          <div class="span3">
    		    <h1 class ="site_title"><%= link_to "elbcard", root_path %></h1>
          </div>

          <div class="span9">
    			   <ul id="nav">
              <li><%= link_to "About", root_path %></li>
    				  <li><%= link_to "Karte Bestellen", root_path %></li>
              <% if current_user %>
                <li><%= link_to "Log Out", logout_path %></li>
                <% else %>
   				     <li><%= link_to "Sign In", login_path %></li>
               <% end %>
   				 </ul>
    	   </div>
        </div>
      </div>
    </header>

<div class = "container" id="content">
  <% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    <a class="close" data-dismiss="alert">Ã—</a>
    <%= msg %>
  </div>
<% end %>   
	<%= yield %>
</div>

